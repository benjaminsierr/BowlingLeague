@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div class="text-center">
    @if (Model.TeamName == null)
    {
        <h1 class="display-4">All Bowlers</h1>
    }
    else
    {
        <h1 class="display-4">@Model.TeamName</h1>
    }

</div>
@*
    Create an app that displays a contact list for all the bowlers in the league: First Name, Middle
    Init, Last Name, Address, City, State, Zip, Phone Number
*@

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">First</th>
            <th scope="col">Middle</th>
            <th scope="col">Last</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Phone</th>
        </tr>
    </thead>
    <tbody>
        @*list out bowlers*@
        @foreach (var x in Model.Bowlers)
        {
        <tr>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
        </tr>
        }

    </tbody>
</table>
@*pagination*@
<div page-info="@Model.PageNumberingInfo"
     page-url-team="@Model.TeamName" page-classes-enabled="true" page-class="btn m-1"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" page-url-pagenum="@Model.PageNumberingInfo.CurrentPage"></div>